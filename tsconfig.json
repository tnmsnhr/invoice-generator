{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "baseUrl": "./src", // This allows for absolute imports from the src directory
    "paths": {
      "*": [
        "*"
      ] // Optional: Maps any path from the src directory
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}